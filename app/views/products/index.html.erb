<div class="container products-head-line">
    <div class="row justify-content-between">
      <div class="col-auto mr-auto""><h1>Listing All Prodcuts</h1></div>
      <div class="col-auto"><%= link_to 'Add New Product', new_product_path, class: "btn btn-success" %></div>
    </div>
</div>


<div class="table-responsive-sm">
    <table class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
              <th>Product Name</th>
              <th>Product unit Price</th>
              <th>Supplier Name</th>
              <th>Stock Unit</th>
              <th>unit of Order</th> 
              <th>Product Details</th>
              <th>Product Edit</th>
            </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr scope="row">
            <td><%= product.product_name %></td>
            <td><%= product.product_unit_price %></td>
            <td><%= product.supplier_name %></td>
            <td><%= product.unit_in_stock %></td>
            <td><%= product.units_of_order %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
          </tr>
          
          <% end %>
        </tbody>
    </table>
  </div>
</div>